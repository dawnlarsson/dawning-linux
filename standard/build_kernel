#!/bin/sh
sh script/is_safe || exit 1

ANSI=$'\033['
RESET=$ANSI"0m"
BOLD=$ANSI"1m"

compiler=$(sh script/key_single compiler)

dawning_flags=$(sh script/key dawning_flags)

echo $BOLD
echo "    Compiling  $1.c  ->  $2" $RESET

$compiler $1.c -o $2 $dawning_flags $suppress

echo
sh script/size $2

chmod +x $2