#!/bin/sh
sh script/is_safe || exit 1


cpu_cores=$(nproc)
shared_flags=""
linker_flags=""
rust_flags=""

cd linux
make -j$cpu_cores KCPPFLAGS="${CFLAGS}" KAFLAGS="${CFLAGS}" LDFLAGS="$linker_flags" RUSTFLAGS="$rust_flags"

cd ..

sudo cp linux/arch/x86/boot/bzImage dist/bootx64.efi

script/size dist/bootx64.efi