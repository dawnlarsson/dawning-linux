mkdir -p $download_artifacts_dir
mkdir -p $kernel_extract_dir

extract_kernel() {
    echo "Checking kernel signature"
    gpg2 --locate-keys $trusted_keys

    unxz -k $download_artifacts_dir"linux-$kernel_version.tar.xz"

    echo "$kernel_pgp" > $download_artifacts_dir"linux-$kernel_version.tar.sign"

    gpg2 --verify $download_artifacts_dir"linux-$kernel_version.tar.sign" $download_artifacts_dir"linux-$kernel_version.tar"

    tar -xf $download_artifacts_dir"linux-$kernel_version.tar" --strip-components=1 -C $kernel_extract_dir
    echo "Kernel extracted"

    rm $download_artifacts_dir"linux-$kernel_version.tar"
}

if [ -f $download_artifacts_dir"linux-$kernel_version.tar.xz" ]; then
    echo "Kernel already downloaded"
    extract_kernel
    exit 0
fi

echo "Downloading kernel $kernel_version"
wget -O $download_artifacts_dir"linux-$kernel_version.tar.xz" $kernel_download

extract_kernel

exit 0